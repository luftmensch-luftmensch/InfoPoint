<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network Permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <!-- Auth permission (Biometric/Facial recognition) -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <!--
        * Setting android:allowBackup to false disable backups to google drive
        * Setting android:supportsRtl to true enable right-to-left (RTL) layouts (in order to use in countries where language is written from right to left)
    -->

    <application
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_info_point_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_info_point_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.InfoPoint"
        tools:targetApi="31">
        <!-- Main Activity -->
        <activity
            android:name=".InfoPointApplication"
            android:theme="@style/Theme.InfoPoint.Starting"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>
